{
  "compilerOptions": {
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@bsv/sdk": ["../../node_modules/@bsv/sdk/dist/esm/index.js"],
      "@bsv/sdk/*": ["../../node_modules/@bsv/sdk/dist/esm/*"],
      "mongodb": ["../../node_modules/mongodb"],
      "mongodb/*": ["../../node_modules/mongodb/*"]
    },
    "strict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "downlevelIteration": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "mod.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "*/**/__tests"
  ]
}